<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/cardView"
    android:elevation="@dimen/cardview_default_elevation">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/myLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_action_settings_bluetooth" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxEms="10"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/text_title"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/myLogo"
            android:layout_toRightOf="@+id/myLogo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="namespace"
            android:id="@+id/text_uid"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/text_title"
            android:layout_toEndOf="@+id/myLogo"
            android:layout_toRightOf="@+id/myLogo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/text_uid"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/text_distance"
            android:textSize="26sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>